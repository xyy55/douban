/**index.wxss**/
@import "../template/template.wxss";
.search {
  display: block;
  width: 100%;
  height: 30px;
  text-align: center;
  background: #42bd56
}
.search-btn {
  display: block;
  margin: auto;
  line-height: 26px;
  width: 94%;
  height: 26px;
  background: white;
  font-size: 24rpx;
  color: gray;
  border-radius:5px
}

.item {
  display: inline-block;
  margin: 0 8px;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  width: 100px;
}
.scroll-x {
  white-space: nowrap;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}





.hot_movie {
 display: inline-block;
 font-size: 20px;
 font-family: '楷体';
 margin-left: 10px;
}
.more {
  display: inline-block;
  float: right;
  margin-right: 10px;
  color: #42bd56;
  font-family: '楷体';
  font-size: 18px
}
.theater {
  margin: 10px 0;
}