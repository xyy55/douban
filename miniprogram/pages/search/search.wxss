/* miniprogram/pages/search/search.wxss */
.search {
  display: block;
  width: 100%;
  height: 30px;
  background: #42bd56;
  text-align: center
}
input {
  display: block;
  margin: auto;
  line-height: 26px;
  width: 338px;
  height: 26px;
  background: white;
  font-size: 24rpx;
  color: gray;
  border-radius:5px;
}
image {
  display: inline-block;
  width: 40px;
  height: 58px;
}
.item {
  margin: 3px 0 0 10px;
  border-bottom-style: solid;
  border-bottom-color: gainsboro;
  border-width: 1px;
}
.name {
  display: inline-block;
  vertical-align:top;
}
.title {
  display: block;
  margin-left: 10px;
  font-size: 17px;
}
.stars{
  display: inline-block;
  flex-direction: row;
  height: 25rpx;
  margin-right: 6rpx;
}
.stars image{
  padding-left: 3rpx;
  height: 25rpx;
  width: 25rpx;
  display: inline-block
}
.star-score{
  color: #aaa;
  font-size: .72rem;
  display: inline-block
}
.rating {
  display: inline-block;
  vertical-align:top;
  margin-left: 10px;
  color:#aaa;
  font-size:.72rem;
}
