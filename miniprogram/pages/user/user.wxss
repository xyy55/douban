/* miniprogram/pages/user/user.wxss */
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

image {
  margin-top: 30px;
  width: 160px;
  height: 160px;
  border-radius: 80px
}
.name {
  margin-top: 20px;
}
.intro {
  margin-top: 20px
}
input {
  width: 260px;
  height: 35px;
  border: solid;
  border-width: 1px;
  text-align: center;
  border-radius:5px;
}
.text {
  display: block;
  width: 260px;
  height: 28px;
  border: solid;
  border-width: 1px;
  text-align: center;
  border-radius:5px;
  margin: auto;
  margin-top: 5px
}
.btn {
  background-color: #4CAF50; /* Green */
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: block;
  font-size: 16px;
  margin-top: 30px;
  border-radius: 5px;
}
.btn1 {
  margin-top: 10px
}